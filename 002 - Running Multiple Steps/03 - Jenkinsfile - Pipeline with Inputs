pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
	    input {
                message "Please enter the name"
                parameters {
                    string(name: 'NAME', defaultValue: '', description: '')
                }
            }
	    input {
                message "Please enter the age"
                parameters {
                    string(name: 'AGE', defaultValue: '', description: '')
                }
            }
            steps {
	    
	    
                echo "$NAME"
                echo "$AGE"
            }
        }
    }
}
