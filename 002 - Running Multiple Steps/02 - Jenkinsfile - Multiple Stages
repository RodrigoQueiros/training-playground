pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('build') {
            steps {
		saveDate("test.txt")
            }
        }
	stage('test') {
            steps {
		testDate("2019")
            }
        }
    }
}

def saveDate(filename = '') {
	sh "date > $filename"
}

def testDate(date = '') {
	sh "grep $date test.txt"
}
