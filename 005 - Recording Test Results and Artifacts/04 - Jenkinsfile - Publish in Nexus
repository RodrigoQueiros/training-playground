pipeline {
    agent { 
		docker { 
            		image 'maven:3.3.3' 
        	}
	}
    stages {
        stage('build') {
            steps {
            	configFileProvider(
                [configFile(fileId: 'mvn-settings',
                    targetLocation: 'settings.xml')]) {
                sh 'mvn -s settings.xml -f "005 - Recording Test Results and Artifacts/04 - Publish in Nexus" clean install'
            }
        }
        }
	stage('nexus') {
            steps {
                sh "mvn deploy"
            }
        }
    }
}
