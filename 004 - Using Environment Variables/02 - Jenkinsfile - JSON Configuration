pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
	    environment {
	    	BUILD_CONFIGS = '''
			[{
				name: "Java",
				command: "echo 'Java Command'"
			},
			{
				name: "Node",
				command: "echo 'Node Command'"
			}
			]
		'''
	    }
            steps {
                script {
                	def buildConfigs = []
                	buildConfigs.each{ buildConfig ->
                		sh "echo '$buildConfig.name' && $buildConfig.command"
					}
                }
            }
        }
    }
}
